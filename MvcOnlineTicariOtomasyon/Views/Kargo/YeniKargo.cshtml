@model MvcOnlineTicariOtomasyon.Models.Sınıflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Takip Kodu")
    <input type="text" value="@ViewBag.takipkod" class="form-control" readonly name="TakipKodu"/>
    <br />
    @Html.Label("Personel")
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    @Html.Label("Alıcı")
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, "{0:dd-MM-yyyy}", new { @class = "form-control", type = "date" })
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>


